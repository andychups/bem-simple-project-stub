module "checkout-shop__total"

match / checkout-shop__total {
    payment = .payment

    "Итого: { .totalPrice } руб."

    apply payment.list[.code == payment.selected] checkout-shop__total-checkout
}

match .* checkout-shop__total-checkout {
    <button class="checkout-shop-checkout">Оформить</button>
}

match .*[.code == 'YANDEX'] checkout-shop__total-checkout {
    <button class="checkout-shop-checkout">Оплатить</button>
}