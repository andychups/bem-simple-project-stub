module "checkout-shop__total"

match / checkout-shop__total {
    payment = .payment

    "Итого: { .totalPrice } руб."

    apply payment.list[.code == 'YANDEX' && payment.selected == 'YANDEX'] checkout-shop__total-pay
}

match .* checkout-shop__total-pay {
    <button class="checkout-shop-pay">Оплатить</button>
}