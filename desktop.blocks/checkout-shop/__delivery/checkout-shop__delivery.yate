module "checkout-shop__delivery"

match / checkout-shop__delivery {
    <select>
        apply .delivery.list checkout-shop__delivery-item
    </select>
}

match .list checkout-shop__delivery-item {
    <option value="{ .code }">
        if (.code == ..selected) {
            @selected="selected"
        }
        "{ .title } – { .price } руб."
    </option>
}
