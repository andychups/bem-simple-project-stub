.abstract-widget {
    border 1px solid #5972a7
    padding 20px
    margin 10px 0

    &__title {
        font-size 24px
        margin-bottom 15px
    }

    &__code {
        font-size 13px
        padding 20px
        border 1px dashed #7a8eb9
    }

    &__button {
        display inline-block
        margin-right 3px
    }
}